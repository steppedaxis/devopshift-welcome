pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script{
                    sh 'docker build --target build --tag ${IMAGE_NAME}:${VERSION}-build.'
                } 
            }
        }

        stage('Test') {
            steps {
               script{
                sh 'docker build --target test --tag ${IMAGE_NAME}:${VERSION}-test.'
                sh 'docker run --rm ${IMAGE_NAME}:${VERSION}-test'
               }
            }
        }
    }
}
